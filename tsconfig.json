{
    "compilerOptions": {
        "jsx": "react-jsx",
        "baseUrl": ".",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@": [
                "./src/renderer"
            ]
        },
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "incremental": true
    }
}